<h1>Add Employee(MongoDB)</h1>

<% if (errors !=undefined) { %>
    <ul>
        <% errors.forEach((error)=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }) %>
    </ul>
    <% (user)} %>


        <form action="/addEmployeeMongo/add" method="POST">
            <h2>
                <%= user.name %>
            </h2>
            <label>EID: </label>
            <input type="text" name="_id" minlength="4" maxlength="4"><br>
            <label>Phone: </label>
            <input type="text" name="phone" minlength="5"><br>
            <label>Email: </label>
            <input type="text" name="email" pattern=".+@gmail\.com" required><button
                type="Add" value="OK">Add</button>
        </form>
        <a href="http://localhost:3004/">Home</a>