<h1>Edit Employee</h1>


<form method="POST">
    <label>EID</label>
    <input type="text" name="EID" required value="<%=updateEmployee.eid %>" readonly>
    <br /><br />

    <label>Name</label>
    <input type="text" name="Name" required value="<%=updateEmployee.ename %>" minlength="5">
    <br /><br />

    <label>Role</label>
    <input type="text" name="Role" required value="<%=updateEmployee.role %>">
    <br /><br />

    <label>Salary</label>
    <input type="number" name="Salary" min="1" max="1000000" required value="<%=updateEmployee.salary %>">
    <br /><br />

    <button type="submit">Update</button>
</form>


